    <script>
        function changeQuantity(action, productId,event) {

            if (event) {
            event.preventDefault(); // Prevent form submission if event is provided
        }
            console.log("I am called with productId:", productId); // Check if function is being called and productId is passed
            if (!productId) {
                console.error('Product ID is undefined.');
                return; // Exit the function if productId is not provided
            }
        
            const url = action === 'increase' ? '/increaseQty' : '/decreaseQty';
            const data = { productId };
        
            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            })
            .then(response => response.json())
            .then(data => {
                console.log("Response message:", data.message); // Check response from server
        
                // Show sweet alert based on the response message
                if (data.message === 'Maximum quantity reached') {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Maximum Quantity Reached',
                        text: 'You have reached the maximum quantity allowed per user.',
                        confirmButtonText: 'OK'
                    });
                } else if (data.message === 'Stock limit exceeded') {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Stock Limit Exceeded',
                        text: 'The quantity you are trying to add exceeds the available stock.',
                        confirmButtonText: 'OK'
                    });
                } else if (data.message === 'Minimum quantity reached') {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Minimum Quantity Reached',
                        text: 'You have reached the minimum quantity allowed per user.',
                        confirmButtonText: 'OK'
                    });
                } else {
                    // Refresh cart display logic here
                    location.reload(); // Simple way to refresh the page and see the updated cart
                }
            })
            .catch((error) => {
                console.error('Error:', error);
            });
        }
        </script>


