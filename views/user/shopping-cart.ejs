                        subtotal += value;
                    }
                    console.log(subtotalElement.textContent, '....................................subtotal.textContent');
                    console.log(subtotal, '....................................subtotal');
                });

                
                const cartSubtotalElement = document.querySelector('.cart_subtotal');
