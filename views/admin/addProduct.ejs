    <script>
document.addEventListener('DOMContentLoaded', function () {
    const nameInput = document.getElementById('product_name');
    const descriptionInput = document.getElementById('product_description');
    const priceInput = document.getElementById('regular_price');
    const discountPriceInput = document.getElementById('discount_price');
    const stockInput = document.getElementById('stock_count');
    const imagesInput = document.getElementById('product_images');

    nameInput.addEventListener('blur', () => validateInput('product_name', /^[A-Z][^\d\s]{0,98}$/, 'nameError', 'Product Name'));
    descriptionInput.addEventListener('blur', () => validateInput('product_description', /^\s*[A-Z][\s\S]{13,}$/, 'descriptionError', 'Description'));
    priceInput.addEventListener('blur', () => validateInput('regular_price', /^\d+(\.\d{1,2})?$/, 'priceError', 'Price'));
    discountPriceInput.addEventListener('blur', () => validateInput('discount_price', /^\d+(\.\d{1,2})?$/, 'discountPriceError', 'Discount Price'));
    stockInput.addEventListener('blur', () => validateInput('stock_count', /^(100|[0-9]{1,2})$/, 'stockError', 'Stock'));

    imagesInput.addEventListener('change', function(e) {
        validateImages(e, 'imagesError');
    });
});

function validateForm() {
    const isValidName = validateInput('product_name', /^[A-Z][^\d\s]{0,98}$/, 'nameError', 'Product Name');
    const isValidDescription = validateInput('product_description', /^\s*[A-Z][\s\S]{13,}$/, 'descriptionError', 'Description');
    const isValidPrice = validateInput('regular_price', /^[1-9]\d*(\.\d{1,2})?$/, 'priceError', 'Price');
    const isValidDiscountPrice = validateInput('discount_price', /^\d+(\.\d{1,2})?$/, 'discountPriceError', 'Discount Price');
    const isValidStock = validateInput('stock_count', /^(?!0+$)([1-9]\d{0,2}|300)$/, 'stockError', 'Stock');
    const isValidCategory = validateCategory();
    const isValidImages = validateImagesCount();

    if (!isValidName || !isValidDescription || !isValidPrice || !isValidDiscountPrice || !isValidStock || !isValidCategory || !isValidImages) {
        document.getElementById('mainError').innerText = 'Cannot submit form. Please fix errors.';
        return false;
    }
    return true;
}

function validateInput(inputId, pattern, errorId, errorMessage) {
    const inputValue = document.getElementById(inputId).value.trim();
    const errorElement = document.getElementById(errorId);

    if (inputValue === '') {
        errorElement.innerText = errorMessage + ' is required.';
        return false;
    } else if (!pattern.test(inputValue)) {
        errorElement.innerText = 'Please enter a valid ' + errorMessage.toLowerCase() + '.';
        return false;
    } else {
        errorElement.innerText = '';
        return true;
    }
}

function validateImages(e, errorId) {
    var fileInput = e.target;
    var maxFiles = 3;
    var validExtensions = ['jpg', 'jpeg', 'png', 'gif', 'webp']; 

    if (fileInput.files.length > maxFiles) {
        alert(`You can only upload a maximum of ${maxFiles} files.`);
        fileInput.value = '';
        document.getElementById(errorId).textContent = `You can only upload a maximum of ${maxFiles} files.`;
        return false; 
    }

    for (var i = 0; i < fileInput.files.length; i++) {
        var file = fileInput.files[i];
        var extension = file.name.split('.').pop().toLowerCase();
        if (!validExtensions.includes(extension)) {
            alert('Please upload only image files (jpg, jpeg, png, gif, webp).');
            fileInput.value = '';
            document.getElementById(errorId).textContent = 'Please upload only image files (jpg, jpeg, png, gif, webp).';
            return false; 
        }
    }

    document.getElementById(errorId).textContent = '';
    return true;
}

function validateCategory() {
    const categoryInputs = document.querySelectorAll('input[name="category"]:checked');
    const categoryError = document.getElementById('categoryError');

    if (categoryInputs.length === 0) {
        categoryError.innerText = 'Please select at least one category.';
        return false;
    } else {
        categoryError.innerText = '';
        return true;
    }
}

function validateImagesCount() {
    if (filesArray.length === 0) {
        document.getElementById('imageValidationMessage').textContent = 'Please select at least one image.';
        return false;
    }
    document.getElementById('imageValidationMessage').textContent = '';
    return true;
}

const filesArray = []; // Array to store selected files
const maxImages = 3; // Maximum number of images allowed

document.getElementById('product_images').addEventListener('change', function(event) {
    const files = event.target.files;
    const previewContainer = document.getElementById('imagePreviewContainer');
    const validationMessage = document.getElementById('imageValidationMessage');

    if (filesArray.length + files.length > maxImages) {
        validationMessage.textContent = `You can only upload a maximum of ${maxImages} images.`;
        return;
    }

    validationMessage.textContent = '';

    for (let i = 0; i < files.length; i++) {
        if (filesArray.length >= maxImages) {
            validationMessage.textContent = `Maximum ${maxImages} images allowed. Some images were not added.`;
            break;
        }

        const file = files[i];
        const fileIndex = filesArray.length;
        filesArray.push(file);
        const reader = new FileReader();

        reader.onload = function(e) {
            const imgElement = document.createElement('div');
            imgElement.className = 'image-preview';
            imgElement.innerHTML = `
                <img src="${e.target.result}" class="img-thumbnail" style="max-width: 150px; margin-right: 10px;">
                <button type="button" class="btn btn-danger btn-sm" onclick="removeImage(${fileIndex})">Delete</button>
            `;
            previewContainer.appendChild(imgElement);
        };

        reader.readAsDataURL(file);
    }
});

function removeImage(index) {
    filesArray.splice(index, 1);
    updatePreviews();
    
    if (filesArray.length < maxImages) {
        document.getElementById('imageValidationMessage').textContent = '';
    }
}

function updatePreviews() {
    const previewContainer = document.getElementById('imagePreviewContainer');
    previewContainer.innerHTML = '';

    filesArray.forEach((file, index) => {
        const reader = new FileReader();
        reader.onload = function(e) {
            const imgElement = document.createElement('div');
            imgElement.className = 'image-preview';
            imgElement.innerHTML = `
                <img src="${e.target.result}" class="img-thumbnail" style="max-width: 150px; margin-right: 10px;">
                <button type="button" class="btn btn-danger btn-sm" onclick="removeImage(${index})">Delete</button>
            `;
            previewContainer.appendChild(imgElement);
        };
        reader.readAsDataURL(file);
    });
}

document.getElementById('productForm').addEventListener('submit', function(event) {
    event.preventDefault();

    if (!validateForm()) {
        return;
    }

    const formData = new FormData();

    filesArray.forEach((file, index) => {
        formData.append('images', file);
    });

    const fields = ['name', 'description', 'price', 'discountPrice', 'stock'];
    fields.forEach(field => {
        formData.append(field, document.querySelector(`[name=${field}]`).value);
    });

    const selectedCategory = document.querySelector('input[name="category"]:checked');
    if (selectedCategory) {
        formData.append('category', selectedCategory.value);
    } else {
        document.getElementById('categoryError').innerText = 'Please select a category.';
        return;
    }

    fetch('/admin/product', {
        method: 'POST',
        body: formData
    }).then(response => {
        if (response.redirected) {
            window.location.href = response.url;
        }
        return response.json();
    })
    .then(data => {
        console.log('Success:', data);
    })
    .catch(error => {
        console.error('Error:', error);
    });
});
