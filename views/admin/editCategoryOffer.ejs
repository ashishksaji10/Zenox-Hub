    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('catOfferForm');

            form.addEventListener('submit', function(event) {
                event.preventDefault();

                const name = document.getElementById('name').value.trim();
                const startingDate = document.getElementById('catStartingDate').value;
                const endingDate = document.getElementById('catEndingDate').value;
                const category = form.category.value;
                const categoryDiscount = document.getElementById('categoryDiscount').value.trim();
                const invalidPattern = /[!@#$%^&*(),.?":{}|<>0-9]/;
                const specialCharPattern = /[!@#$%^&*(),.?":{}|<>]/;

                let isValid = true;

                if (name === '') {
                    showError('catOfferName-error', 'Offer Name is required');
                    isValid = false;
                } else if (invalidPattern.test(name)) {
                    showError('catOfferName-error', 'Offer Name should not contain special characters or numbers');
                    isValid = false;
                } else {
                    clearError('catOfferName-error');
                }

                if (startingDate === '') {
                    showError('catStartingDate-error', 'Starting Date is required');
                    isValid = false;
                } else {
                    clearError('catStartingDate-error');
                }

                if (endingDate === '') {
                    showError('catEndingDate-error', 'Ending Date is required');
                    isValid = false;
                } else {
                    clearError('catEndingDate-error');
                }

                if (startingDate !== '' && endingDate !== '') {
                    const startDate = new Date(startingDate);
                    const endDate = new Date(endingDate);

                    if (endDate <= startDate) {
                        showError('catEndingDate-error', 'Ending Date cannot be before Starting Date');
                        isValid = false;
                    } else {
                        clearError('catEndingDate-error');
                    }
                }

                if (category === '') {
                    showError('category-error', 'Category is required');
                    isValid = false;
                } else {
                    clearError('category-error');
                }

                if (categoryDiscount === '' || isNaN(categoryDiscount)) {
                    showError('catDiscount-error', 'Category Discount must be a valid number');
                    isValid = false;
                } else if (specialCharPattern.test(categoryDiscount)) {
                    showError('catDiscount-error', 'Category Discount should not contain special characters or letters');
                    isValid = false;
                } else if (categoryDiscount <= 0 || categoryDiscount > 70) {
                    showError('catDiscount-error', 'Category Discount must be between 0 and 40');
                    isValid = false;
                 } else {
                    clearError('catDiscount-error');
                }

                if (isValid) {
                    form.submit();
                }
            });
        });

        function showError(elementId, message) {
            const errorElement = document.getElementById(elementId);
            errorElement.textContent = message;
        }

        function clearError(elementId) {
            const errorElement = document.getElementById(elementId);
            errorElement.textContent = '';
        }
    </script>
