            <div class="card">             
                <div class="card-body">
                    <div class="col-md-13">
                        <div class="table-responsive">
                            <div id="salesTable">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th class="col-md-1 text-center">#</th>
                                            <th class="col-md-1 text-center">Order ID</th>
                                            <th class="col-md-2 text-center">Name</th>
                                            <th class="col-md-3 text-center">Product</th>
                                            <th class="col-md-1 text-center">Discount</th>
                                            <th class="col-md-1 text-center">Date</th>
                                            <th class="col-md-1 text-center">Payment</th>
                                            <th class="col-md-1 text-center">Status</th>
                                            <th class="col-md-1 text-center">Coupon</th>
                                            <th class="col-md-1 text-center">Sales Price</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <h5 class="mb-2" style="color: green;">Total count : <%= salesData.length %></h5>
                                        <% if(salesData && salesData.length > 0) { %>
                                            <% salesData.forEach((sale, index) => { %>
                                                <tr>
                                                    <td class="col-md-1 text-center"><%= index + 1 %></td>
                                                    <td class="col-md-1 text-center"><%= sale.oId %></td>
                                                    <td class="col-md-2 text-center"><%= sale.user %></td>
                                                    <td class="col-md-3">
                                                        <% if(sale.products && sale.products.length > 0) { %>
                                                            <% const uniqueProducts = {}; %>
                                                            <% sale.products.forEach(product => { %>
                                                                <% if (uniqueProducts[product.name]) { %>
                                                                    <% uniqueProducts[product.name].quantity += product.quantity; %>
                                                                <% } else { %>
                                                                    <% uniqueProducts[product.name] = { ...product }; %>
                                                                <% } %>
                                                            <% }); %>
                                                            <% Object.values(uniqueProducts).forEach(product => { %>
                                                                <p><%= product.name %></p>
                                                            <% }); %>
                                                        <% } else { %>
                                                            <p>No products</p>
                                                        <% } %>
                                                    </td>
                                                    <td class="col-md-1 text-center">
                                                        <% 
                                                        let totalDiscount = 0;
                                                        sale.products.forEach(product => {
                                                            totalDiscount += (product.price * product.quantity);
                                                        });
                                                        totalDiscount -= sale.billTotal;
                                                        %>
                                                        <p>-<%= totalDiscount.toFixed(2) %>/-</p>
                                                    </td>
                                                    <td class="col-md-1 text-center"><%= new Date(sale.orderDate).toLocaleDateString() %></td>
                                                    <td class="col-md-1 text-center"><%= sale.paymentMethod %></td>
                                                    <td class="col-md-1 text-center"><%= sale.status %></td>
                                                    <td class="col-md-1 text-center">
                                                        <% if(sale.coupon) { %>
                                                            <p style="color: green;">Applied</p>
                                                        <% } else { %>
                                                            <p style="color: red;">Not Applied</p>
                                                        <% } %>
                                                    </td>
                                                    <td class="col-md-1 text-center"><%= sale.billTotal %>/-</td>
                                                </tr>
                                            <% }) %>
                                        <% } %>
                                    </tbody>
                                    </table>
                                    <div class="pagination">
                                        <% if (currentPage > 1) { %>
                                            <a href="?page=<%= currentPage - 1 %>">&laquo; Previous</a>
                                        <% } %>
                                    
                                        <% for(let i = 1; i <= totalPages; i++) { %>
                                            <a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                                        <% } %>
                                    
                                        <% if (currentPage < totalPages) { %>
                                            <a href="?page=<%= currentPage + 1 %>">Next &raquo;</a>
                                        <% } %>
                                    </div>
                                    
                                    <div class="totalPrice ml-20">
                                        <h4><span class="text-primary">Overall Sales Count</span> : <%= salesData.length %></h4>
                                        <h4><span class="text-primary">Total Stock Price</span> : ₹<%= totalRegularPrice %></h4>
