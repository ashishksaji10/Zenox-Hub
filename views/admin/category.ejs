            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div>
                                <form id="categoryForm" method="post"> 
                                    <div class="mb-4">
                                        <label for="product_name" class="form-label">Name</label>
                                        <input type="text" placeholder="Type here" class="form-control" name="name" id="product_name" />
                                        <p id="nameError" class="text-danger"></p>
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Description</label>
                                        <textarea placeholder="Type here" name="description" id="description" class="form-control"></textarea>
                                        <p id="descriptionError" class="text-danger"></p>
                                    </div>
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary">Create category</button>
                                    </div>
                                </form>
                                
                            </div>
                            <p class="message" style="text-align: center; color: red;">
                                <% if (typeof message !== "undefined") { %>
                                    <%= message %>
                                <% } %>
                                </p>
                        </div>
                        <div class="col-md-9">
                            <div class="table-responsive">
                                <!-- Category Table -->
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Description</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if(category.length > 0) { %>
                                                <% for(let i = 0; i < category.length; i++) { %>
                                                    <tr>
                                                        <td><%= category[i].name %></td>
                                                        <td><%= category[i].description %></td>
                                                        <td>
                                                            <% if(category[i].is_Active === false) { %>
                                                                Inactive
                                                            <% } else { %>
                                                                Active
                                                            <% } %>
                                                        </td>
                                                        <td>
                                                            <a href="/admin/edit-cate?id=<%= category[i]._id %>" class="btn btn-primary">Edit</a>
                                                            <br><br>
                                                            <a href="/admin/delete-cate?id=<%= category[i]._id %>">
                                                                <% if(category[i].is_Active === false) { %>
                                                                    <!-- If category is inactive, show restore button -->
                                                                    <button onclick="toggleCategory('<%= category[i]._id %>', 'active')" class="btn btn-primary">Restore</button>
                                                                <% } else { %>
                                                                    <!-- If category is active, show delete button -->
                                                                    <button onclick="toggleCategory('<%= category[i]._id %>', 'inactive')" class="btn btn-primary">Delete</button>
                                                                <% } %>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="4">Not Found</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>

