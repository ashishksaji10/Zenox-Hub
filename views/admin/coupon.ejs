            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>S NO.</th>
                                    <th>Coupon Name</th>
                                    <th>Description</th>
                                    <th>Discount In Purchase Amount</th>
                                    <th>Minimum Purchase Amount</th>
                                    <th>Maximum Purchase Amount</th>
                                    <th style="text-align: center;">Expired on</th>
                                    <th>Maximum Users</th>
                                    <th>Status</th>
                                    <th style="text-align: center;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% coupon.forEach((coupon, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td><%= coupon.code %></td>
                                        <td><%= coupon.description %></td>
                                        <td style="text-align: center;"><%= coupon.discountPercentage %>%</td>
                                        <td style="text-align: center;"><%= coupon.minimumAmount %></td>
                                        <td style="text-align: center;"><%= coupon.maximumAmount %></td>
                                        <td><%= new Date(coupon.expirationDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></td>
                                        <td style="text-align: center;"><%= coupon.maxUsers %></td>
                                        <td>
                                            <% if (coupon.isActive) { %>
                                                Active
                                            <% } else { %>
                                                Inactive
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (coupon.isActive) { %>
                                                <button class="btn btn-primary" onclick="toggleCoupon('<%= coupon._id %>', false)">Disable</button>
                                            <% } else { %>
                                                <button class="btn btn-primary" onclick="toggleCoupon('<%= coupon._id %>', true)">Activate</button>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
